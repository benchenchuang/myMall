<%- include('../components/header.ejs') %>
    <%- include('../components/section_header.ejs') %>
    <%- include('../components/section_tabs.ejs') %>
    <div class="tpl-portlet-components">
        <div class="portlet-title">
            <div class="caption font-green bold">
                <span class="am-icon-code"></span> 找回密码问题列表
            </div>
        </div>
        <div class="tpl-block">
            <div class="am-g">
                <div class="am-u-sm-12 am-u-md-6">
                    <div class="am-btn-toolbar">
                        <div class="am-btn-group am-btn-group-xs">
                            <a href="/admin/article/create" type="button" class="am-btn am-btn-default am-btn-success"><span class="am-icon-plus"></span>新增用户</a>
                        </div>
                    </div>
                </div>
                <div class="am-u-sm-12 am-u-md-3">
                    <div class="am-form-group">
                        <select id="select_sort" data-am-selected="{btnSize: 'sm'}" style="display: none;">
                            <option value="0">全部用户</option>
                        </select>
                    </div>
                </div>
                <div class="am-u-sm-12 am-u-md-3">
                    <div class="am-input-group am-input-group-sm">
                        <input type="text" id="search_title" class="am-form-field" placeholder="输入查找的用户名">
                        <span class="am-input-group-btn"><button id="search_btn" class="am-btn  am-btn-default am-btn-success tpl-am-btn-success am-icon-search" type="button"></button></span>
                    </div>
                </div>
            </div>
            <div class="am-g">
                <div class="tpl-table-images">
                    <form class="am-form">
                        <table class="am-table am-table-striped am-table-hover table-main">
                            <thead>
                                <tr>
                                    <th class="table-title">用户ID</th>
                                    <th class="table-title">用户名</th>
                                    <th class="table-title">用户角色</th>
                                    <th class="table-title">创建时间</th>
                                    <th class="table-set">操作</th>
                                </tr>
                            </thead>
                            <tbody id="tbody">
                                
                            </tbody>
                        </table>

                        <div id="paginations" class="am-pagination-right pagination">
                        </div>
                        <div style="clear:both"></div>
                    </form>
                </div>
            </div>
        </div>
        <div class="tpl-block " >
            <div class="am-modal-hd">添加用户
                <a href="javascript: void(0)" class="am-close am-close-spin" id="add_close">&times;</a>
            </div>
            <div class="am-g tpl-amazeui-form">
                <div class="am-u-sm-12 am-u-md-9">
                    <form class="am-form am-form-horizontal" id="add_form">
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">用户名 / UserName</label>
                            <div class="am-u-sm-9">
                                <input type="text" name="username" value="" >
                                <small>用户名用于登录，不可以修改</small>
                            </div>
                        </div>

                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">权限 / Access</label>
                            <div class="am-u-sm-9">
                                <div>
                                    <select id="select_sort" name="role" data-am-selected="{btnSize: 'sm'}" style="display: none;">
                                        <option value="0">管理员</option>
                                        <option value="1">用户</option>
                                    </select>
                                </div>
                                <small>0:管理者,1:用户</small>
                            </div>
                        </div>

                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">密码 / Password</label>
                            <div class="am-u-sm-9">
                                <input type="password" name="password" value="">
                                <small>用于用户登录</small>
                            </div>
                        </div>

                        <div class="am-form-group">
                            <div class="am-u-sm-9 am-u-sm-push-3">
                                <button type="button" id="add_customer" class="am-btn am-btn-primary">添加用户</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<%- include('../components/footer.ejs') %>
<script>
    $('.am-btn').click(function(){
        var formData=$('form.am-form').serialize();
        $.post('/admin/info',formData,function(res){
            alertModel(res.data);
            if(res.status==2){
                setTimeout(function(){
                    window.location.reload();
                },1500)
            }
        })
    })
</script>